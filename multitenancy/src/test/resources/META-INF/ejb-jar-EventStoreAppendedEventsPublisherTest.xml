<?xml version="1.0" encoding="UTF-8"?>
<ejb-jar xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xmlns="http://java.sun.com/xml/ns/javaee" 
    xmlns:ejb="http://java.sun.com/xml/ns/javaee/ejb-jar_3_1.xsd" 
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/ejb-jar_3_1.xsd" 
    version="3.1">

    <enterprise-beans>    

        <session>
            <ejb-name>EventStoreAppendedEventsPublisher</ejb-name>
            <description></description>
            <ejb-class>
                de.redrainbow.care.common.port.adapter.event.store.EventStoreAppendedEventsPublisherImpl
	    </ejb-class>
            <session-type>Singleton</session-type>
            <ejb-local-ref>
                <ejb-ref-name>EventDispatcher</ejb-ref-name>
                <ejb-ref-type>Session</ejb-ref-type>
                <local>de.redrainbow.care.common.event.dispatch.EventDispatcher</local>
                <ejb-link>MockEventDispatcher</ejb-link>
            </ejb-local-ref>
        </session>

    </enterprise-beans>

</ejb-jar>